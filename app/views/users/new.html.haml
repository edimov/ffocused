%h2= t("users.new.title")

= form_for @user do |f|
  .form-error= @user.errors[:login].is_a?(Array) ? @user.errors[:login].first : @user.errors[:login]
  = f.label :login
  = f.text_field :login
  
  .form-error= @user.errors[:email].is_a?(Array) ? @user.errors[:email].first : @user.errors[:email]
  = f.label :email 
  = f.text_field :email
  
  .form-error= @user.errors[:password].is_a?(Array) ? @user.errors[:password].first : @user.errors[:password]
  = f.label :password
  = f.password_field :password 
  
  .form-error= @user.errors[:password_confirmation].is_a?(Array) ? @user.errors[:password_confirmation].first : @user.errors[:password_confirmation]
  = f.label :password_confirmation 
  = f.password_field :password_confirmation
  
  .form-error= @user.errors[:beta_code].is_a?(Array) ? @user.errors[:beta_code].first : @user.errors[:beta_code]
  = f.label :beta_code
  = f.text_field :beta_code 
  
  .submit-wrapper
    = f.submit t("users.new.go")
