%h3= t("categories.index.add_category.instagram.title", :name => remote_account.remote_user_name.capitalize)

- form_for Category.new do |f|

  = f.hidden_field :remote_account_id, :value => remote_account.id
  = hidden_field_tag :type, "Category::Instagram"

  = f.label :title
  = f.text_field :title

  = f.label :description
  = f.text_area :description

  = f.label :slug
  = f.text_field :slug

  .submit-wrapper
    = f.submit