#about-page
  %h2= @portfolio.title
  %p.about-content= sanitize @portfolio.description.gsub("\n", "<br />"), :tags => %w(br b strong em i)

  - if @portfolio.facebook_share
    :plain
      <div id="fb-root"></div>
      <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/fr_FR/all.js#xfbml=1&appId=112347598870437";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>

    .fb-like{"data-href" => "http://ffocused.com/#{@portfolio.slug}", "data-send" => "true", "data-width" => "450", "data-show-faces" => "true"}

